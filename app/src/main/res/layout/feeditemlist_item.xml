<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="88dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:background="@android:color/darker_gray">

    <LinearLayout
            android:paddingLeft="@dimen/listitem_threeline_horizontalpadding"
            android:paddingStart="@dimen/listitem_threeline_horizontalpadding"
            android:paddingTop="12dp"
            android:layout_gravity="center_vertical"
            android:paddingBottom="12dp"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                    android:id="@+id/txtvItemname"
                    style="@style/AntennaPod.TextView.ListItemPrimaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Episode title"
                    tools:background="@android:color/holo_green_dark"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:orientation="horizontal"

                      android:gravity="center_vertical"
                      android:layout_gravity="center_vertical">

            <TextView
                    android:id="@+id/statusUnread"
                    style="@style/AntennaPod.TextView.UnreadIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    tools:text="NEW"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    tools:background="@android:color/white" android:layout_marginStart="0dp"
                    android:layout_below="@+id/imgvType"/>

            <ImageView
                    android:id="@+id/imgvInPlaylist"
                    android:layout_width="18sp"
                    android:layout_height="18sp"
                    android:alpha="0.6"
                    android:contentDescription="@string/in_queue_label"
                    android:src="?attr/stat_playlist"
                    android:visibility="visible"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    tools:src="@drawable/ic_list_white_24dp"
                    tools:background="@android:color/holo_red_light"
                    android:tint="?android:attr/textColorTertiary"
            />

            <ImageView
                    android:id="@+id/imgvType"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:alpha="0.6"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    tools:ignore="ContentDescription"
                    android:tint="?android:attr/textColorTertiary"
                    tools:src="@drawable/ic_hearing_white_18dp"
                    tools:background="@android:color/holo_red_light"
            />


            <TextView
                    android:id="@+id/txtvPublished"
                    style="@style/AntennaPod.TextView.ListItemSecondaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Jan 23"
                    tools:background="@android:color/holo_green_dark"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/imgvInPlaylist" android:layout_toRightOf="@+id/imgvInPlaylist"/>

            <TextView
                    android:id="@+id/txtvSize"
                    style="@style/AntennaPod.TextView.ListItemSecondaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" · 125 MB · "
                    tools:background="@android:color/holo_green_dark" android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
            />

            <TextView
                    android:id="@+id/txtvLen"
                    style="@style/AntennaPod.TextView.ListItemSecondaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="00:42:23"
                    tools:background="@android:color/holo_green_dark" android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/episode_progress"
                      android:orientation="horizontal"
                      android:gravity="bottom"
        android:layout_gravity="bottom">



            <TextView
                    android:id="@+id/txtvLenSize"
                    style="@style/AntennaPod.TextView.ListItemSecondaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="00:42:23"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    tools:background="@android:color/holo_green_dark" android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"/>

            <ProgressBar
                    android:id="@+id/pbar_episode_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:indeterminate="false"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    android:progress="42"
                    tools:background="@android:color/holo_blue_light"/>


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/vertical_list_divider" android:layout_height="match_parent"
             android:layout_marginTop="8dp"
             android:visibility="gone"
             android:layout_marginBottom="8dp"
             android:layout_width="1dp"/>

    <include layout="@layout/secondary_action" android:layout_height="match_parent"
             android:layout_width="@dimen/listview_secondary_button_width"/>

</LinearLayout>
